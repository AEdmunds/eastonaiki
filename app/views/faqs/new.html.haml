- form_for :faq, url: { action: create } do |f| 
  - if @post.errors.any? 
    .errorExplanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg| 
          %li = msg 
  %p
    = f.label :question 
    %br  
    = f.text_field :question 
  %p
    = f.label :answer 
    %br
    = f.text_area :answer 
  %p
    = f.submit 
   
= link_to 'Back', :action => :index 